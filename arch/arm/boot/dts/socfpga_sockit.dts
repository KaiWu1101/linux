/dts-v1/;
#include <socfpga.dtsi>

/ {
	model = "Terasic Technologies Cyclone V SoC Kit";
	compatible = "altr,socfpga-sockit", "altr,socfpga";

	chosen {
		bootargs = "console=ttyS0,115200 root=/dev/mmcblk0p2 rw rootwait";
	};

	memory {
		name = "memory";
		device_type = "memory";
		reg = <0x0 0x40000000>; /* 1 GB */
	};

	aliases {
		/*
		 * this allows e.g. boot loaders to update the
		 * device tree's MAC address value with data gathered
		 * from other sources of information (fuses, eeprom,
		 * user provided specification)
		 */
		ethernet0 = &gmac1;
	};

	soc {
		clkmgr@ffd04000 {
			clocks {
				osc1 {
					clock-frequency = <25000000>;
				};
			};
		};

		dwmmc0@ff704000 {
			num-slots = <1>;
			supports-highspeed;
			broken-cd;
			altr,dw-mshc-ciu-div = <3>;
			altr,dw-mshc-sdr-timing = <0 3>;

			slot@0 {
				reg = <0>;
				bus-width = <4>;
			};
		};

		i2c0: i2c@ffc04000 {
			speed-mode = <0>;
			status = "okay";
		};

		/* XXX TODO re-check these QSPI settings */
		qspi: spi@ff705000 {
			compatible = "cadence,qspi";
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0xff705000 0x1000>,
				<0xffa00000 0x1000>;
			interrupts = <0 151 4>;
			master-ref-clk = <400000000>;
			ext-decoder = <0>;  /* external decoder */
			num-chipselect = <4>;
			fifo-depth = <128>;
			bus-num = <2>;
			dmas = <&pdma 24>, <&pdma 25>;
			dma-names = "tx", "rx";
			dma-mask = <0xffffffff>;

			flash0: n25q00@0 {
				#address-cells = <1>;
				#size-cells = <1>;
				compatible = "n25q00";
				reg = <0>;	/* chip select */
				spi-max-frequency = <100000000>;
				m25p,fast-read;
				page-size = <256>;
				block-size = <16>; /* 2^16, 64KB */
				read-delay = <4>;  /* delay value in read data capture register */
				tshsl-ns = <50>;
				tsd2d-ns = <50>;
				tchsh-ns = <4>;
				tslch-ns = <4>;

				partition@qspi-boot {
					/* 8MB for raw data. */
					label = "Flash 0 Raw Data";
					reg = <0x0 0x800000>;
				};

				partition@qspi-rootfs {
					/* 120MB for jffs2 data. */
					label = "Flash 0 jffs2 Filesystem";
					reg = <0x800000 0x7800000>;
				};
			};
		};

		/* XXX TODO re-check these timer settings */
		timer0@ffc08000 {
			clock-frequency = <100000000>;
		};

		timer1@ffc09000 {
			clock-frequency = <100000000>;
		};

		timer2@ffd00000 {
			clock-frequency = <25000000>;
		};

		timer3@ffd01000 {
			clock-frequency = <25000000>;
		};

		/* XXX TODO re-check these serial settings */
		serial0@ffc02000 {
			clock-frequency = <100000000>;
		};

		serial1@ffc03000 {
			clock-frequency = <100000000>;
		};

		/* XXX TODO re-check these sysmgr settings */
		sysmgr@ffd08000 {
			cpu1-start-addr = <0xffd080c4>;
		};

		/* XXX TODO re-check these USB settings */
		usb1: usb@ffb40000 {
			ulpi-ddr = <0>;
			status = "okay";
		};

		watchdog0: wd@ffd02000 {
			status = "okay";
		};

		/* XXX TODO re-check these GPIO settings */
		leds {
			compatible = "gpio-leds";

			hps0 {
				label = "hps_led0";
				gpios = <&gpio1 15 1>;
			};

			hps1 {
				label = "hps_led1";
				gpios = <&gpio1 14 1>;
			};

			hps2 {
				label = "hps_led2";
				gpios = <&gpio1 13 1>;
			};

			hps3 {
				label = "hps_led3";
				gpios = <&gpio1 12 1>;
			};
		/* XXX TODO provide FPGA attached LEDs as well? */
		};
	};
};

&i2c0 {
	lcd: lcd@28 {
		compatible = "newhaven,nhd-0216k3z-nsw-bbw";
		reg = <0x28>;
		height = <2>;
		width = <16>;
		brightness = <8>;
	};

	eeprom@51 {
		compatible = "atmel,24c32";
		reg = <0x51>;
		pagesize = <32>;
	};

	rtc@68 {
		compatible = "dallas,ds1339";
		reg = <0x68>;
	};
};

/* XXX TODO provide the SPI attached display */
/* XXX TODO provide the SPI/I2C(?) attached accelerometer */
/* XXX TODO provide the IR receiver */
/* XXX TODO provide the GPIO attached buttons/switches */

&gmac1 {
	phy-mode = "rgmii";
	snps,phy-addr = <0xffffffff>; /* probe for phy addr */
	rxd0-skew-ps = <0>;
	rxd1-skew-ps = <0>;
	rxd2-skew-ps = <0>;
	rxd3-skew-ps = <0>;
	txen-skew-ps = <0>;
	txc-skew-ps = <2600>;
	rxdv-skew-ps = <0>;
	rxc-skew-ps = <2000>;
	snps,max-mtu = <4062>;
	status = "okay";
};

&spi1 {
	/* XXX shall replace the tx-dma-channel et al stuff */
	dmas = <&pdma 20>, <&pdma 21>;
	dma-names = "tx", "rx";
	status = "okay";

	spidev@1 {
		compatible = "spidev";
		reg = <1>;	/* chip select */
		spi-max-frequency = <25000000>;
	};
};
