#include <dt-bindings/interrupt-controller/irq.h>

/include/ "socfpga_cyclone5.dtsi"

/ {
	model = "Altera SOCFPGA Cyclone V Board SoCrates";
	compatible = "ebv,socrates", "altr,socfpga-cyclone5", "altr,socfpga";

	chosen {
		bootargs = "console=ttyS0,115200 root=/dev/mmcblk0p2 rw rootwait";
	};

	memory@0 {
		name = "memory";
		device_type = "memory";
		reg = <0x0 0x40000000>; /* 1GB */
	};

	aliases {
		/* this allow the ethaddr uboot environmnet variable contents
		 * to be added to the gmac1 device tree blob.
		 */
		ethernet0 = &gmac1;
	};

	framebuffer {
		compatible = "simple-framebuffer";
		reg = <0x3f000000 (800 * 480 * 4)>;
		width = <800>;
		height = <480>;
		stride = <(800 * 4)>;
		format = "a8r8g8b8";
	};

	keys {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <100>;

		up {
			label = "joystick up";
			linux,code = <0x67>;
			gpios = <&gpio2 19 0>;	/* GPI6 */
		};

		down {
			label = "joystick down";
			linux,code = <0x6a>;
			gpios = <&gpio2 20 0>;	/* GPI7 */
		};

		left {
			label = "joystick left";
			linux,code = <0x69>;
			gpios = <&gpio2 24 0>;	/* GPI11 */
		};

		right {
			label = "joystick right";
			linux,code = <0x6c>;
			gpios = <&gpio2 23 0>;	/* GPI10 */
		};

		button {
			label = "joystick button";
			linux,code = <0x1c>;
			gpios = <&gpio2 15 0>;	/* GPI2 */
		};
	};

	leds {
		compatible = "gpio-leds";

		hps0 {
			label = "hps_led0";
			gpios = <&gpio0 28 1>;	/* GPIO28 */
		};

		hps1 {
			label = "hps_led1";
			gpios = <&gpio1 19 1>;	/* GPIO48 */
		};

		hps2 {
			label = "hps_led2";
			gpios = <&gpio1 25 1>;	/* GPIO54 */
		};
	};

	soc {
		touch_pio: gpio@ff220000 {
			compatible = "altr,pio-1.0";
			reg = <0xff220000 0x000000010>;
			gpio-controller;
			#gpio-cells = <2>;
			altr,gpio-bank-width = <4>;
			interrupts = <0 40 1>;          /* FPGA IRQ 0, rising edge */
			altr,interrupt_type = <2>;	/* IRQ_TYPE_EDGE_FALLING */
		};

		gpio@ff708000 {
			status = "okay";
		};

		gpio@ff709000 {
			status = "okay";
		};

		gpio@ff70a000 {
			status = "okay";
		};
	};
};

&dcan0 {
	status = "okay";
};

&gmac1 {
	phy-mode = "rgmii";
	snps,phy-addr = <0xffffffff>; /* probe for phy addr */
	rxd0-skew-ps = <0>;
	rxd0-skew-ps = <0>;
	rxd1-skew-ps = <0>;
	rxd2-skew-ps = <0>;
	rxd3-skew-ps = <0>;
	txen-skew-ps = <0>;
	txc-skew-ps = <2600>;
	rxdv-skew-ps = <0>;
	rxc-skew-ps = <2000>;
	max-frame-size = <3800>;
	status = "okay";
};

&hps_fpgabridge0 {
	init-val = <1>;
	status = "okay";
};

&hps_fpgabridge1 {
	init-val = <1>;
	status = "okay";
};

&hps_fpgabridge2 {
	init-val = <1>;
	status = "okay";
};

&i2c0 {
	speed-mode = <1>;
	status = "okay";

	eeprom@51 {
		compatible = "atmel,24c32";
		reg = <0x51>;
		pagesize = <32>;
		status = "disabled";
	};

	rtc@68 {
		compatible = "stm,m41t82";
		reg = <0x68>;
	};
};

&i2c1 {
	speed-mode = <1>;
	status = "okay";

	touchscreen@8 {
		compatible = "lnt,ti1-i2c";
		reg = <0x8>;
		gpios = <&touch_pio 0 0>;
	};
};

&mmc {
	num-slots = <1>;
	supports-highspeed;
	broken-cd;
	altr,dw-mshc-ciu-div = <3>;
	altr,dw-mshc-sdr-timing = <0 3>;

	slot@0 {
		reg = <0>;
		bus-width = <4>;
	};
};

&osc1 {
	clock-frequency = <25000000>;
};

&qspi {
	status = "okay";

	flash0: n25q256a@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "n25q256a,n25q00";
		reg = <0>;	/* chip select */
		spi-max-frequency = <100000000>;
		m25p,fast-read;
		page-size = <256>;
		block-size = <16>; /* 2^16, 64KB */
		read-delay = <4>;  /* delay value in read data capture register */
		tshsl-ns = <50>;
		tsd2d-ns = <50>;
		tchsh-ns = <4>;
		tslch-ns = <4>;

		partition@qspi-boot {
			/* 8MB for raw data. */
			label = "Flash 0 Raw Data";
			reg = <0x0 0x800000>;
		};

		partition@qspi-rootfs {
			/* 24MB for jffs2 data. */
			label = "Flash 0 jffs2 Filesystem";
			reg = <0x800000 0x1800000>;
		};
	};
};

&spi0 {
	cs-gpios = <0>, <0>, <0>, <0>, <&gpio0 9 0>;	/* GPIO09 is CS4 */
	status = "okay";

	/* XXX devel experiment, does not belong here */
	touchscreen@4 {
		compatible = "lnt,ti1-spi";
		reg = <4>;
		spi-max-frequency = <4500000>;
		gpios = <&gpio1 15 0>;	/* GPIO44 as pen-down */
		status = "disabled";
	};
};

&spi1 {
	status = "okay";
};

&uart0 {
	status = "okay";
};

&usb1 {
	status = "okay";
};

&watchdog0 {
	status = "okay";
};
